<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

    <title>TODO APP</title>
</head>

<body>
    <h1>TODO APP</h1>
    <h2>Tarefas</h2>
    <ul>
        {{#tasks}}
        <li>
            {{name}}
            {{#priority}}
            <span class="task-priority task-priority--{{priority}}"></span>
            {{/priority}}
            {{! edit pode alterar para uma rota post quando for ser tratado no backend
            e processado com o mongoose  }}
            <a href="/?tid={{id}}">edit</a>
            <a href="/tarefas/del/{{id}}">done</a>
        </li>
        {{/tasks}}
    </ul>

    <h2>Nova tarefa</h2>
    <form action="/task">
        {{#task.id}}
        <input type="hidden" name="id" value="{{.}}">
        {{/task.id}}
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="{{task.name}}" />
        <input type="submit" value="Salvar" class="btn-primary" />

        <label for="prioridade">Prioridade:</label>
        <input type="radio" id="baixa" name="prioridade" value="Baixa" {{#task.Baixa}}checked{{/task.Baixa}}>
        <label for="baixa">Baixa</label>
        <input type="radio" id="media" name="prioridade" value="Média" {{#task.Média}}checked{{/task.Média}}>
        <label for="media">Média</label>
        <input type="radio" id="alta" name="prioridade" value="Alta" {{#task.Alta}}checked{{/task.Alta}}>
        <label for="alta">Alta</label>
    </form>
    <p>{{erro}}</p>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
