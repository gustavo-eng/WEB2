    <style>
    /* General - Reset */
            * {
                padding: 0; 
                margin: 0; 
                
                font-family: 'Roboto', 'sans-serif'; 
                box-sizing: border-box; /* para os elementos n passarem da area limite */ 
            }

            /* Variaveis */
            :root {
                --main-color: #0a66c2;
                --main-text-color: rgb(226, 224, 224);
                --border-color: #8f8f8f;
                --bio-bg-color: #264061;
                --bio-border-color: #293544;
                --about-bg-color: #16212f;   

            }

            .highlight {
                color: var(--main-color);
                cursor: default;
            }

            .highlight-aside {
                font-size: 18.4px;
                color: #7cbcf8;
            }


            /* Containers */
            #container {
                display: flex;
                flex-direction: row;
                background-color: var(--about-bg-color); /* ---------- diff *********** */ 
                color: var(--main-text-color);
            }

            #bio-container {
                flex: 1 1 30%;
                min-height: 100vh;
                background-color: var(--bio-bg-color);
                text-align: center;
                padding: 25px /* 30pxem cima/baixo*/ 15px /*12 px laterais*/;
                border-right: 4.9px solid var(--main-color);
                border-bottom-right-radius: 30px;
                border-top-right-radius: 30px;
            }

            #about-container {
                flex: 1 1 90%;
                height: 100%;
                margin: 10px 35px;
                min-height: 100vh;
                background-color: var(--about-bg-color);

            }

            #bio-container img {
                width: 180px;
                height: 180px;
                border-radius: 50%;
            }


            /* Bio container  */
            #bio-container h3 {
                margin-bottom: 27px;
            }

            #bio-container p {
                margin-bottom: 20px;
            }

            #bio-container #welcome-text {
                font-style: italic;
                font-weight: bolder;
            }


            #social-container {
                display: flex;
                justify-content: center;
                list-style: none;
                /* background-color: red; */
                border-bottom: 1px solid rgb(194, 194, 194);
                margin-bottom: 20px;
                padding-bottom: 24px;
            }


            #social-container li {
                flex: 1 1 0;
                max-width: 60px;

            }

            #social-container li a {
                color: var(--main-color);
                font-size: 30px;
            }

            #email-container {
                display: flex;
                justify-content: center;
            }

            #email-container ion-icon, 
            #email-container a {
                flex: 1 1 0;

            }

            #email-container a {
                color: var(--main-text-color);
                text-decoration: none;
                max-width: 300px;
            }

            #email-container ion-icon {
                color: var(--main-color);
                font-size: 21px;
                margin-right: 6px;
            }

            /* about container  */

            #name { 
                font-size: 30px;
                margin-bottom: 15px;
            }

            #title {
                font: 24px;
                font-weight: bolder;
                margin-bottom: 17px;
            }

            .description {
                max-width: 75%;
                margin-bottom: 12px;
            }

            #btn-projects {
                display: flex;
                font-weight: bold;  
                font-size: 15px;
                color: var(--main-text-color);
                padding: 8px 8px;
                background-color: var(--main-color);
                border: 2px solid var(--main-color);
                text-decoration: none;
                border-radius: 5px;
                transition: .3Ss;
                margin: 25px 10px;
                text-align: center;
                width: 150px;
            }

            #btn-projects ion-icon,
            #btn-projects span {
                flex: 1 1 0;
            }

            #btn-projects ion-icon {
                font-size: 18px;
                max-width: 20px;
            }

            #btn-projects:hover {
                background-color: transparent;
            }

            #skills-section-title {
                border-top: 1.5px solid var(--border-color);
                padding-top: 25px;
                margin-bottom: 55px;
                font-size: 32px;
            }

            #skills-container {
                /* background-color: red; */
                display: flex;
                flex-wrap: wrap;
                margin-top: 35px;

            }

            .skills-box {
                /* border: 2px solid yellow;
                background-color: purple; */
                flex: 1 1  33.3%;
                max-width: 33.3%;

                margin-bottom: 35px;
            }

            .skills-box i {
                font-size: 45px;
                margin-right: 10px;
            }

            .skills-title {
                font-size: 23px;
                margin-bottom: 24px;
                font-weight: bolder;
                padding-left: 10px;
                border-left:  5px solid var(--main-color);

            }

            .separate {
                color: var(--main-color);
            }


            /*  Mobile  */
            @media(max-width:450px) {  /* A baixo de 450 pixels, tera estilos diferentes */ 
                #container {
                    flex-direction: column;
                }

                #bio-container {
                    min-height: auto;
                    border-right: none;
                    border-top-right-radius: 0px;
                    border-bottom-left-radius: 30px ;
                    border-bottom: 6px solid var(--main-color);
                    
                }

                #email-container {
                    display: flex;
                    width: 41vh;
                    /* background-color: red; */
                }


                #bio-container p { 
                    max-width: 60%;
                    margin: 10px auto;
                }

                #about-container {
                    text-align: center;
                }

                #about-container .description {
                    margin: 10px auto;
                    max-width: 100%;
                    line-height: 26px;
                }

                #btn-projects {
                    margin: 23px auto;
                }

                .skills-box {
                    padding: 12px;
                    /* background-color: red; */
                    flex: 1 1 auto;
                    max-width: 100%;
                    margin-right: 9px;
                    margin-bottom: 41px;
                    text-align: left;
                }    



            }
        
            a {
                text-decoration: none; 
                color: white;
                margin: 13px auto;
                border-right: 4.9px solid var(--main-color);
                border-bottom-right-radius: 30px;
                border-top-right-radius: 30px;
                
            }
    
    </style>
</head>

